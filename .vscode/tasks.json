{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build PythonSyntaxGenerator",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "build",
                "/p:Configuration=\"${input:configuration}\"",
                "${workspaceFolder}/PythonSyntaxGenerator.sln"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile",
            "presentation": {
                "reveal": "silent",
                "clear": true
            }
        },
        {
            "label": "Clean build",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "clean",
                "/p:Configuration=\"${input:configuration}\"",
                "${workspaceFolder}/PythonSyntaxGenerator.sln"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent",
                "clear": true
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "type": "pickString",
            "id": "configuration",
            "description": "Build Configuration",
            "options": [
                "Debug",
                "Release",
            ],
            "default": "Debug"
        }
    ]
}